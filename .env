# AI股票分析系统环境变量配置文件
# Author: Corey (lijingfan@pku.org.cn)
# 使用说明: 复制此文件为 .env 并修改相应配置

# ===== LLM配置 (必须配置) =====
# 🔑 火山引擎ARK平台API密钥 - 必须替换为您的实际密钥
LLM_API_KEY=2da25a07-36b9-4d5e-87dd-98ad4a7ac2fc

# LLM模型配置
LLM_MODEL=ep-20250827105540-7wzzj
LLM_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=30
LLM_RETRY_TIMES=3
LLM_RETRY_DELAY=1

# ===== Web服务配置 =====
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_DEBUG=false
WEB_SECRET_KEY=ai-stock-secret-key-2025-change-this-in-production
WEB_PER_PAGE=20
WEB_MAX_PER_PAGE=100

# ===== 爬虫配置 =====
SCRAPY_MAX_ARTICLES=50
SCRAPY_DELAY=1
SCRAPY_CONCURRENT_REQUESTS=8
SCRAPY_TIMEOUT=30
SCRAPY_RETRY_TIMES=3
SCRAPY_USER_AGENT=AI-Stock-Crawler/1.1
SCRAPY_ENABLE_SELENIUM=true
SCRAPY_HEADLESS=true

# ===== 数据库配置 =====
DATABASE_PATH=database/ai_stock.db
DATABASE_BACKUP_DIR=database/backup
DATABASE_AUTO_BACKUP=true
DATABASE_BACKUP_INTERVAL_HOURS=24
DATABASE_CLEANUP_DAYS=30
DATABASE_MAX_BACKUP_FILES=10

# ===== 日志配置 =====
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_SIZE=50
LOG_BACKUP_COUNT=5
LOG_DIR=logs

# ===== 调度器配置 =====
SCHEDULER_TIMEZONE=Asia/Shanghai
SCHEDULER_MAX_WORKERS=4
SCHEDULER_COALESCE=true
SCHEDULER_MAX_INSTANCES=1
SCHEDULER_MISFIRE_GRACE_TIME=300

# ===== Flask环境配置 =====
FLASK_ENV=production
FLASK_DEBUG=0

# ===== 时区配置 =====
TZ=Asia/Shanghai

# ===== 性能调优配置 (可选) =====
# 如果服务器性能较低，可以调整以下参数
# SCRAPY_MAX_ARTICLES=30
# SCRAPY_DELAY=2
# SCRAPY_CONCURRENT_REQUESTS=4
# LLM_TEMPERATURE=0.05
